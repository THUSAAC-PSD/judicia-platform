{
  "name": "@judicia/frontend-sdk",
  "version": "1.0.0",
  "description": "TypeScript SDK for developing Judicia Platform frontend components and micro frontends",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && npm run build:css",
    "build:css": "postcss src/**/*.css --base src --dir dist",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prepublishOnly": "npm run build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "judicia",
    "online-judge", 
    "plugin-system",
    "micro-frontend",
    "typescript",
    "react",
    "web-components"
  ],
  "author": "Judicia Platform Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/judicia/judicia-platform.git",
    "directory": "judicia-frontend-sdk"
  },
  "bugs": {
    "url": "https://github.com/judicia/judicia-platform/issues"
  },
  "homepage": "https://judicia.dev",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "eventemitter3": "^5.0.1",
    "mitt": "^3.0.1",
    "zustand": "^4.4.1"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.4.0",
    "@storybook/addon-interactions": "^7.4.0",
    "@storybook/addon-links": "^7.4.0",
    "@storybook/blocks": "^7.4.0",
    "@storybook/react": "^7.4.0",
    "@storybook/react-vite": "^7.4.0",
    "@storybook/testing-library": "^0.2.0",
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.49.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "storybook": "^7.4.0",
    "tailwindcss": "^3.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  }
}