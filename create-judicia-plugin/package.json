{
  "name": "create-judicia-plugin",
  "version": "1.0.0",
  "description": "CLI tool for scaffolding Judicia Platform plugins",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "create-judicia-plugin": "dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "templates/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && npm run copy-templates",
    "copy-templates": "cp -r templates dist/",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prepublishOnly": "npm run build",
    "create": "node dist/cli.js"
  },
  "keywords": [
    "judicia",
    "cli",
    "scaffolding",
    "plugin",
    "generator",
    "template"
  ],
  "author": "Judicia Platform Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/judicia/judicia-platform.git",
    "directory": "create-judicia-plugin"
  },
  "bugs": {
    "url": "https://github.com/judicia/judicia-platform/issues"
  },
  "homepage": "https://judicia.dev",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "enquirer": "^2.4.1",
    "fs-extra": "^11.1.1",
    "handlebars": "^4.7.8",
    "ora": "^6.3.1",
    "validate-npm-package-name": "^5.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.0",
    "@types/validate-npm-package-name": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}