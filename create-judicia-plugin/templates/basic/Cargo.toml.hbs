[package]
name = "{{kebabCase}}"
version = "0.1.0"
edition = "2021"
description = "{{description}}"
author = "{{author}} <{{email}}>"
license = "{{license}}"
{{#if hasRepository}}
repository = "{{repository}}"
{{/if}}

[lib]
crate-type = ["cdylib"]

[dependencies]
# Judicia Plugin SDK
judicia-sdk = { version = "0.1.0", path = "../../judicia-sdk" }

# WebAssembly support
wasm-bindgen = "0.2"
js-sys = "0.3"
web-sys = "0.3"
console_error_panic_hook = "0.1"

# Async runtime
wasm-bindgen-futures = "0.4"

# Serialization
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
serde-wasm-bindgen = "0.6"

# Utilities
uuid = { version = "1.0", features = ["v4", "serde", "wasm-bindgen"] }
chrono = { version = "0.4", features = ["serde", "wasm-bindgen"] }

[dependencies.web-sys]
version = "0.3"
features = [
  "console",
  "Document",
  "Element",
  "HtmlElement",
  "Window",
  "Event",
  "EventTarget",
]